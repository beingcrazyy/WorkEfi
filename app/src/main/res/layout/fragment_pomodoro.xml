<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context=".fragments.DashboardFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/page_Background">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_Color"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/card_Color"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Time Interval"
                        android:textColor="#A4A4A4"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:id="@+id/total_time_interval_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--                            <androidx.core.widget.NestedScrollView-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content">-->

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/tt_hour_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_13sdp"
                            app:np_dividerColor="#00000000"
                            app:np_selectedTextColor="@color/white"
                            app:np_selectedTextSize="@dimen/_27sdp"
                            app:np_textColor="@color/white"
                            app:np_textSize="@dimen/_22sdp"
                            android:clickable="false"

                            />
                        <!--                            </androidx.core.widget.NestedScrollView>-->

                        <!--                            <androidx.core.widget.NestedScrollView-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content">-->
                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/tt_minute_picker"
                            android:layout_width="112dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_13sdp"
                            android:clickable="false"
                            app:np_dividerColor="#00000000"
                            app:np_selectedTextColor="@color/white"
                            app:np_selectedTextSize="@dimen/_27sdp"
                            app:np_textColor="@color/white"
                            app:np_textSize="@dimen/_22sdp" />

                        <!--                            </androidx.core.widget.NestedScrollView>-->

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_Color"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/card_Color"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repeatation Time Interval"
                        android:textColor="#A4A4A4"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:id="@+id/repeatation_time_interval_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/rt_hour_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_13sdp"
                            app:np_dividerColor="#00000000"
                            app:np_selectedTextColor="@color/white"
                            app:np_selectedTextSize="@dimen/_27sdp"
                            app:np_textColor="@color/white"
                            app:np_textSize="@dimen/_22sdp"
                            android:clickable="false"

                            />
                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/rt_minute_picker"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_13sdp"
                            android:clickable="false"
                            app:np_dividerColor="#00000000"
                            app:np_selectedTextColor="@color/white"
                            app:np_selectedTextSize="@dimen/_27sdp"
                            app:np_textColor="@color/white"
                            app:np_textSize="@dimen/_22sdp" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_Color"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:padding="@dimen/_12sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/card_Color"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Break Time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/inter_bold"
                        android:layout_gravity="center_vertical"
                        />

                    <Button
                        android:id="@+id/break_time_selector"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/ellipse"
                        android:text="5"
                        android:textSize="@dimen/_30sdp"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/alarm_card_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_Color"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:id="@+id/alarm_sound_layout_before"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/card_Color"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alarm_sound_before"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarm Sound (Before)"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="@dimen/_18sdp" />

                        <Switch
                            android:id="@+id/sound_switch_before"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:track="@drawable/custom_toggle_2"
                            android:checked="true"
                            android:thumb="@drawable/thumb"
                            android:layout_gravity="center"
                            android:scaleX="1.15"
                            android:scaleY="1.15"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp">

                        <TextView
                            android:id="@+id/textView2_before"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:background="@drawable/input_ractangle"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center_vertical"
                            android:text="  Pomodore Alarm.mp3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/alarm_sound"
                            tools:ignore="NotSibling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="SET"
                            android:textColor="#43E6FC"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView2_before"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintVertical_bias="0.473" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vibration"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="@dimen/_18sdp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_122sdp"
                            android:track="@drawable/custom_toggle_2"
                            android:checked="true"
                            android:thumb="@drawable/thumb"
                            android:scaleX="1.15"
                            android:scaleY="1.15"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/alarm_card_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_Color"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:id="@+id/alarm_sound_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/card_Color"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alarm_sound_after"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarm Sound (After)"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="@dimen/_18sdp" />

                        <Switch
                            android:id="@+id/sound_switch_after"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_26sdp"
                            android:track="@drawable/custom_toggle_2"
                            android:checked="true"
                            android:thumb="@drawable/thumb"
                            android:layout_gravity="center"
                            android:scaleX="1.15"
                            android:scaleY="1.15"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_13sdp">

                        <TextView
                            android:id="@+id/textView2_after"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:background="@drawable/input_ractangle"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center_vertical"
                            android:text="  Pomodore Alarm.mp3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/alarm_sound"
                            tools:ignore="NotSibling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="SET"
                            android:textColor="#43E6FC"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView2_after"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="@dimen/_13sdp"
                            app:layout_constraintVertical_bias="0.473" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vibration"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="@dimen/_18sdp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_122sdp"
                            android:track="@drawable/custom_toggle_2"
                            android:checked="true"
                            android:thumb="@drawable/thumb"
                            android:scaleX="1.15"
                            android:scaleY="1.15"

                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_140sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:background="@drawable/button_ractangle"
                android:fontFamily="@font/inter_bold"
                android:text="START"
                android:textAlignment="center"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:gravity="bottom"
                />



        </LinearLayout>

</ScrollView>