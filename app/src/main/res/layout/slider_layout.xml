<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_Black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/sulphur_point_bold"
            android:text="Drinking\nWater"
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />

        <ImageView
            android:id="@+id/ref_Image"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/water_splash"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:fontFamily="@font/sulphur_point_light"
        android:text="@string/DrinkingWater_decription"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>