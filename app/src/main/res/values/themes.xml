<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkEfi_New" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#997575</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">#024D4C</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_Black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item> </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="ConstantStringTextStyle">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/white</item> <!-- Adjust the text color as needed -->
    </style>

</resources>